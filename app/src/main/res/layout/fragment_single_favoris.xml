
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        tools:context="com.example.zak.testfragments.SingleFavorisFragment"
        android:background="#3C579E"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#3C579E"
            android:gravity="top"
            android:orientation="horizontal"
            android:id="@+id/header_profile"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <!--<ImageView
                android:id="@+id/imageView"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile" />-->


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_gravity="center"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<com.facebook.login.widget.ProfilePictureView
                        android:id="@+id/profile_picture"
                        android:layout_width="160dp"
                        android:layout_height="160dp"></com.facebook.login.widget.ProfilePictureView>-->

                    <com.facebook.login.widget.ProfilePictureView
                        android:id="@+id/favorisPicture"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/android"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/subtracted_circle_profil"
                        android:contentDescription="@null"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:layout_gravity="center"/>

                </FrameLayout>




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_gravity="center">

                    <!--
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:text=""
                        android:textSize="18dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:id="@+id/favoris_name"
                        android:textAlignment="center"/>


                        -->
                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/favoris_name"
                        android:paddingTop="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        />

                </LinearLayout>



                <ImageView
                    android:id="@+id/favorisbeacon"
                    android:paddingTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/favoris"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4260AE"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:toggle="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            tools:context="com.example.zak.testfragments.SingleFavorisFragment"

            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:toggle="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="#3C579E"
                android:id="@+id/facebookFavLayout"
                >
                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/facebook"
                    android:layout_gravity="center"/>


                <!--android:id="@+id/editFacebookFavorisView"-->


                <ImageView
                    android:id="@+id/go_facebook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outdoorwhite"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editFacebookFavorisView"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#fff" />


            </RelativeLayout>




